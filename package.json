{
  "name": "spacedrop",
  "private": true,
  "scripts": {
    "api": "yarn workspace api",
    "desktop": "yarn workspace desktop",
    "landing": "yarn workspace landing",
    "dev": "yarn api prisma:client && concurrently \"docker-compose -f docker-compose.dev.yml up\" \"yarn api dev\" \"yarn desktop dev:app\" \"yarn desktop dev:electron\"",
    "dev:backend": "docker-compose -f docker-compose.dev.yml up"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@prisma/**",
      "**/@prisma",
      "**/prisma/**",
      "**/prisma",
      "**/electron",
      "**/electron/**",
      "**/glasstron",
      "**/glasstron/**"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0"
  }
}
