{
  "name": "spacedrop",
  "private": true,
  "scripts": {
    "api": "yarn workspace api",
    "desktop": "yarn workspace desktop",
    "dev": "concurrently \"docker-compose -f docker-compose.dev.yml up\" \"yarn api dev\" \"yarn desktop dev\""
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/electron",
      "**/electron/**"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0"
  }
}
