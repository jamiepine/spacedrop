{
  "name": "spacedrop",
  "private": true,
  "scripts": {
    "api": "yarn workspace api",
    "desktop": "yarn workspace desktop",
    "landing": "yarn workspace landing",
    "dev": "concurrently \"yarn dev:backend\" \"yarn desktop dev\"",
    "dev:nico": "concurrently \"docker-compose -f docker-compose.dev-nico.yml up\" \"yarn api dev\" \"yarn desktop dev\"",
    "dev:backend": "docker-compose -f docker-compose.dev.yml up"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/electron",
      "**/electron/**",
      "**/glasstron",
      "**/glasstron/**"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0"
  }
}
